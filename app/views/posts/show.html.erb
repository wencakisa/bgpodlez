<% provide(:title, @post.title) %>

<div class="parallax-container">
  <div class="parallax overlay"><%= image_tag @post.image %></div>
</div>

<div class="section">
  <div class="row container">
    <h2 class="header"><%= @post.title %></h2>
    <blockquote class="blockquote"><%= @post.content %></blockquote>
  </div>

  <div class="row">
    <% if @post.user == current_user %>
      <div class="container grey-text left-align">
        <%= link_to 'Редактирай новина', edit_post_path(@post) %>
      </div>
    <% end %>
    <div class="container grey-text right-align">
      Добавено от <i><%= @post.user.email %></i> на <i><%= @post.created_at.to_date %></i>
    </div>
  </div>
</div>

<div class="parallax-container">
  <div class="parallax overlay"><%= image_tag @post.image %></div>
</div>
