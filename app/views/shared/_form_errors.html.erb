<% if object.errors.any? %>
  <div class="row">
    <div class="col s2 offset-s5 center-align">
      <ul class="collection with-header red-text">
        <li class="collection-header"><h5><%= pluralize object.errors.count, 'error' %></h5></li>
        <% object.errors.full_messages.each do |msg| %>
          <li class="collection-item"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
